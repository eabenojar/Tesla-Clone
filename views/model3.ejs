          <input type="text" placeholder="example@email.com" name="search">
          <button type="submit"><i class="fa fa-search"></i>SIGN UP</button>
        </form>
      </div>
    </div>
  </div>
  <!-- Model S vs Model 3 Comparison -->
  <div class="model3_modelS_container">
    <div class="row">
      <div class="model3_modelS_images">
        <img src="https://www.cstatic-images.com/car-pictures/xl/usc30tsc021b021003.png" alt="Mountain View">
        <img src="https://www.tesla.com/tesla_theme/assets/img/model3/model_3--side_profile.png?20170801" alt="Mountain View">
